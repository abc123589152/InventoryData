    <title>@Model using System.Data.DataTable</title>
    <h2>權限設定</h2>
    @using System.Data
<form method="post" action="@Url.Action("PermitionEdit")" enctype="multipart/form-data">
    @foreach (DataRow row in Model.Rows)
    {
    <div class="form-horizontal">
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">群組</span></font>
            <div class="col-md-10">
                <select name="GroupName" id="GroupName" class="form-control" required>
                    <option value="@row["GroupName"]">@row["GroupName"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">F15B廠區設備裝置SWITCH阜位</span></font>
            <div class="col-md-10">
                <select name="Device" id="Device" class="form-control" required>
                    <option value="@row["Device"]">@row["Device"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">新增廠區</span></font>
            <div class="col-md-10">
                <select name="Fab" id="Fab" class="form-control" required>
                    <option value="@row["Fab"]">@row["Fab"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>

            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">CCTV新增資訊</span></font>
            <div class="col-md-10">
                <select name="CCTV" id="CCTV" class="form-control" required>
                    <option value="@row["CCTV"]">@row["CCTV"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">門禁新增資訊</span></font>
            <div class="col-md-10">
                <select name="DOOR" id="DOOR" class="form-control" required>
                    <option value="@row["DOOR"]">@row["DOOR"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">回報</span></font>
            <div class="col-md-10">
                <select name="Report" id="Report" class="form-control" required>
                    <option value="@row["Report"]">@row["Report"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">業主回報</span></font>
            <div class="col-md-10">
                <select name="OrnerReport" id="OrnerReport" class="form-control" required>
                    <option value="@row["OrnerReport"]">@row["OrnerReport"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">新增帳號</span></font>
            <div class="col-md-10">
                <select name="Account" id="Account" class="form-control" required>
                    <option value="@row["Account"]">@row["Account"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">權限設定</span></font>
            <div class="col-md-10">
                <select name="Permit" id="Permit" class="form-control" required>
                    <option value="@row["Permit"]">@row["Permit"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">SMSCCTV</span></font>
            <div class="col-md-10">
                <select name="SMSCCTV" id="SMSCCTV" class="form-control" required>
                    <option value="@row["SMSCCTV"]">@row["SMSCCTV"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">SMS-讀卡機</span></font>
            <div class="col-md-10">
                <select name="SMSReader" id="SMSReader" class="form-control" required>
                    <option value="@row["SMSReader"]">@row["SMSReader"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">SMS-AlarmSystem</span></font>
            <div class="col-md-10">
                <select name="SMSAlarmSystem" id="SMSAlarmSystem" class="form-control" required>
                    <option value="@row["SMSAlarmSystem"]">@row["SMSAlarmSystem"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">SMS-柵欄機</span></font>
            <div class="col-md-10">
                <select name="SMSBarriergate" id="SMSBarriergate" class="form-control" required>
                    <option value="@row["SMSBarriergate"]">@row["SMSBarriergate"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">SMS-通關機</span></font>
            <div class="col-md-10">
                <select name="SMSGate" id="SMSGate" class="form-control" required>
                    <option value="@row["SMSGate"]">@row["SMSGate"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">SMS-製證機</span></font>
            <div class="col-md-10">
                <select name="SMSMakeCard" id="SMSMakeCard" class="form-control" required>
                    <option value="@row["SMSMakeCard"]">@row["SMSMakeCard"]</option>
                    <option value="授權">授權</option>
                    <option value="未授權">未授權</option>
                </select>
            </div>
        </div>       
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">記錄廠商</span></font>
            <div class="col-lg-10">
                <input type="text" name="RackPeople" id="RackPeople" class="form-control" value="@row["RackPeople"]" readonly />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">時間</span></font>
            <div class="col-lg-10">
                <input type="date" name="AddDatetime" id="AddDatetime" class="form-control" value="@Convert.ToDateTime(row["AddDatetime"]).ToString("yyyy-MM-dd")" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12" align="center" style="right:300px">
                <input type="submit" value="編輯" class="btn btn-primary" />
                <a href="/Home/permition" class="btn btn-info">返回記錄</a>
            </div>
        </div>
    </div>
    }
</form>
