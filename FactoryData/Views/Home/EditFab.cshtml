<h2>修改</h2>
<title>@Model IEnumerable<FactoryData.Models.Fab></title>
@foreach (var item in Model)
{
    <form method="post" action="@Url.Action("EditFab")">
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">ID</span></font>
                <div class="col-md-10">
                    <input type="text" id="ID" name="ID" class="form-control" value="@item.ID" readonly />
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">廠區</span></font>
                <div class="col-md-10">
                    <input type="text" id="FabName" name="FabName" class="form-control" value="@item.FabName" required />
                    <br />
                    <input type="submit" value="修改" class="btn btn-primary" />
                    <a href="/Home/Fab" class="btn btn-info">返回Fab</a>
                </div>
            </div>
        </div>
    </form>
}


