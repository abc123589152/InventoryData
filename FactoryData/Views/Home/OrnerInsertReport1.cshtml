<h2>業主回報</h2>
<title>@Model using System.Data.DataTable</title>
@using System.Data
<form method="post" action="@Url.Action("OrnerInsertReport")" enctype="multipart/form-data">
    <div class="form-horizontal">
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">標題</span></font>
            <div class="col-md-10">
                <input type="text" id="Title" name="Title" class="form-control" required />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">記錄廠商</span></font>
            <div class="col-lg-10">
                <input type="text" name="RackPeople" id="RackPeople" class="form-control" value="@Session["Remarks"]" readonly />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">類型</span></font>
            <div class="col-lg-10">
                <select name="Type" id="Type" class="form-control">
                    <option value="柵欄機">柵欄機</option>
                    <option value="紅外線">紅外線</option>
                    <option value="通關機">通關機</option>
                    <option value="電視牆">電視牆</option>
                    <option value="CCTV">CCTV</option>
                    <option value="Door">門禁</option>
                    <option value="Other">其他</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">時間</span></font>
            <div class="col-lg-10">
                <input type="date" name="AddDatetime" id="AddDatetime" class="form-control" required />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">上傳圖片</span></font>
            <div class="col-lg-10">
                <input type="file" name="FilePhoto" id="FilePhoto" class="box has-advanced-upload is-success" />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">上傳檔案</span></font>
            <div class="col-lg-10">
                <input type="file" name="File" id="File" class="box has-advanced-upload is-success" />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">記錄 </span></font>
            <div class="col-lg-12" style="right:0px;left:195px">
                <textarea class="form-control" name="Content" rows="4" cols="80" id="Content" style="height: 300px; width: 900px; margin: 0px;max-height:300px;max-width:900px"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12" align="center" style="right:300px">
                <input type="submit" value="新增" class="btn btn-primary" />
                <a href="/Home/OrnerReport/" class="btn btn-info">返回記錄</a>
            </div>
        </div>
    </div>
</form>






