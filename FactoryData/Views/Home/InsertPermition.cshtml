
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model using System.Data.DataTable</title>
</head>
<body>
    <h2>權限設定</h2>
    @using System.Data
    <form method="post" action="@Url.Action("InsertPermition")" enctype="multipart/form-data">
        <div class="form-horizontal">
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">群組</span></font>
                <div class="col-md-10">
                    <input type="text" name="GroupName" id="GroupName" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">F15B廠區設備裝置SWITCH阜位</span></font>
                <div class="col-md-10">
                    <select name="Device" id="Device" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>

                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">新增廠區</span></font>
                <div class="col-md-10">
                    <select name="Fab" id="Fab" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>

                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">CCTV新增資訊</span></font>
                <div class="col-md-10">
                    <select name="CCTV" id="CCTV" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">門禁新增資訊</span></font>
                <div class="col-md-10">
                    <select name="DOOR" id="DOOR" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">回報</span></font>
                <div class="col-md-10">
                    <select name="Report" id="Report" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">業主回報</span></font>
                <div class="col-md-10">
                    <select name="OrnerReport" id="OrnerReport" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">新增帳號</span></font>
                <div class="col-md-10">
                    <select name="Account" id="Account" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">權限設定</span></font>
                <div class="col-md-10">
                    <select name="Permit" id="Permit" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">SMSCCTV</span></font>
                <div class="col-md-10">
                    <select name="SMSCCTV" id="SMSCCTV" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">SMS-讀卡機</span></font>
                <div class="col-md-10">
                    <select name="SMSReader" id="SMSReader" class="form-control" required>
                        <option value="授權">授權</option>
                        <option value="未授權">未授權</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">記錄廠商</span></font>
                <div class="col-lg-10">
                    <input type="text" name="RackPeople" id="RackPeople" class="form-control" value="@Session["Remarks"]" readonly />
                </div>
            </div>
            <div class="form-group">
                <font size="5"><span class="control-label col-md-2">時間</span></font>
                <div class="col-lg-10">
                    <input type="date" name="AddDatetime" id="AddDatetime" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12" align="center" style="right:300px">
                    <input type="submit" value="新增" class="btn btn-primary" />
                    <a href="/Home/permition" class="btn btn-info">返回記錄</a>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
