
@{
    ViewBag.Title = "AuthorityGroup";
}
<h2>新增權限</h2>
<h2>新增</h2>
<form method="post" action="@Url.Action("AuthorityGroup")">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">群組名稱</span></font>
            <div class="col-md-10">
                <input type="text" id="GroupName" name="GroupName" class="form-control" required />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">可看清單</span></font>
            <div class="col-md-10">
                <select name="RackPeople" id="RackPeople" class="form-control">
                    <option value="Index">Index</option>
                    <option value="DeviceSwitchPortDisplay">Index</option>                   
                </select>
            </div>
        </div>       
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">備註</span></font>
            <div class="col-md-10">
                <input type="text" id="Remarks" name="Remarks" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="新增" class="btn-danger">
    </div>
</form>
<div>
    @Html.ActionLink("返回顯示列表", "CCTV")
</div>



