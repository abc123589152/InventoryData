@{
    ViewBag.Title = "CompanyEdit";
}
<h2>CompanyEdit</h2>
<title>@Model using System.Data.DataTable </title>
@using System.Data
<h2>新增</h2>
@foreach (DataRow row in Model.Rows) {
<form method="post" action="@Url.Action("CompanyEdit")">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">公司名稱</span></font>
            <div class="col-md-10">
                <input type="text" id="CompanyName" name="CompanyName" class="form-control" value="@row["CompanyName"]" required />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">員工姓名</span></font>
            <div class="col-md-10">
                <input type="text" id="empolyeesName" name="empolyeesName" class="form-control" value="@row["empolyeesName"]" required />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">卡號</span></font>
            <div class="col-md-10">
                <input type="text" id="CardNumber" name="CardNumber" class="form-control" value="@row["CardNumber"]" required />
            </div>
        </div>
        <div class="form-group">
            <font size="5"><span class="control-label col-md-2">新增時間</span></font>
            <div class="col-md-10">
                <input type="text" id="AddDatetime" name="AddDatetime" class="form-control" value="@Convert.ToDateTime(row["AddDatetime"]).ToString("yyyy/MM/dd")" required />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="修改" class="btn-danger">
        </div>
    </div>
</form>
}
<div>
    @Html.ActionLink("返回顯示列表", "Company")
</div>



